generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           BigInt        @id @default(autoincrement())
  telegramId   String        @unique
  username     String?
  balanceStars BigInt        @default(0) // баланс в звёздах
  balanceCoins BigInt        @default(0) // Mines Coins
  pickaxeLevel Int           @default(0)
  lastMineAt   DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
  inventory    Inventory[]
  referrals    Referral[]    @relation("referrer")
  caseOpens    CaseOpen[]
}

model Transaction {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    BigInt
  type      String
  amount    BigInt
  meta      Json?
  createdAt DateTime @default(now())
}

model Inventory {
  id       BigInt @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   BigInt
  resource String
  amount   Int    @default(0)
}

model Referral {
  id             BigInt   @id @default(autoincrement())
  referrer       User     @relation("referrer", fields: [referrerId], references: [id])
  referrerId     BigInt
  referredUserId BigInt
  percent        Float    @default(0.05)
  createdAt      DateTime @default(now())
}

model CaseOpen {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    BigInt
  caseType  Int
  reward    Json
  createdAt DateTime @default(now())
}
