generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(cuid())
  telegramId       BigInt         @unique
  username         String?
  createdAt        DateTime       @default(now())
  lastMineAt       DateTime?
  lastFreeCaseAt   DateTime?
  pickaxeLevel     Int            @default(0)
  minesCoin        BigInt         @default(0)
  starsBalance     BigInt         @default(0)
  referrerId       String?
  referralCode     String?        @unique
  referrals        Referral[]
  transactions     Transaction[]
  inventory        UserResource[]
}

model Referral {
  id         String  @id @default(cuid())
  userId     String  @unique
  referredBy String?
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  amount    BigInt
  type      String
  createdAt DateTime @default(now())
  meta      String?
}

model WithdrawalRequest {
  id        String   @id @default(cuid())
  userId    String
  amount    BigInt
  fee       Int
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

model UserResource {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  resource  String
  amount    BigInt   @default(0)
  @@unique([userId, resource])
}

model ActiveGame {
  id        String   @id @default(cuid())
  userId    String   @unique
  bet       BigInt
  level     Int
  broken    Json
  messageId Int?
  chatId    Int?
  startedAt DateTime @default(now())
  locked    Boolean  @default(false)
}
